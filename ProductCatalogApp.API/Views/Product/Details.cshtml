@model ProductCatalogApp.Domain.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@Model.Name</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-light">
                <!-- Product Image -->
                <div class="card-img-container" style="height: 400px; overflow: hidden;">
                    <img src="@(!string.IsNullOrEmpty(Model.ImagePath) ? Model.ImagePath : "/images/default.jpg")"
                         class="card-img-top img-fluid" alt="@Model.Name" style="object-fit: contain; width: 100%; height: 100%; object-position: center;">
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-light">
                <div class="card-body">
                    <h4 class="card-title">Product Details</h4>
                    <p><strong>Category:</strong> @Model.Category.Name</p>
                    <p><strong>Price:</strong> $ @Model.Price.ToString("0.00")</p>
                    <p><strong>Duration:</strong> @Model.DurationInDays days</p>
                    <p><strong>Start Date:</strong> @Model.StartDate.ToString("MMMM dd, yyyy")</p>

                    <!-- Add any additional details or styling you wish here -->
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary btn-sm w-100">Back to Product List</a>
                </div>
            </div>
        </div>
    </div>
</div>
